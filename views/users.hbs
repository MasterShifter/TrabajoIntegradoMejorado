
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">



      <h2 class="text-left">Usuarios encontrados</h2>
      <hr />
      <ul id="userHolder" class="users_list">

      </ul>
    </div>
  </div>
</div>


<script type="text/javascript">

fetch('/api/user', {
  method: 'GET'
})
.then(res => res.json())
.then(data => {
  data.users.map(user => {

    var genero;
    switch(user.genre){
      case 'Hombre':
      genero = 'hombre';
      break;
      case 'Mujer':
      genero = 'mujer';
      break;
      default:
      genero = 'no_especificado';
    }

    var item = document.createElement('li');
    item.className = 'col-xs-2 img-thumbnail user-card';
    item.innerHTML =
    `<a href=${'user/'+user.nickname}>
    <figure>
    <img class="img-responsive avatar" src=${user.avatar} alt=${user.nickname} />
    <figcaption class=${genero}><span class="nickname">${user.displayName} (${calcularEdad(user.birthdate)})</span></figcaption>
    </figure>
    </a>`;

    document.getElementById('userHolder').appendChild(item);
  })

})

</script>
