  <script type="text/javascript">

  var meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];

  const myHeaders = new Headers();
  myHeaders.append('authorization', `Bearer ${localStorage.token}`)

  fetch('/api/event', {
    method: 'GET',
    headers: myHeaders
  })
  .then(res => res.json())
  .then(data => {
    data.events.map(event => {


      var item = document.createElement('li')
      item.innerHTML =
      `<time datetime=${event.date}>
      <span class="day">${new Date(event.date).getDate() }</span>
      <span class="month">${meses[new Date(event.date).getMonth()] }</span>
      <span class="year">${new Date(event.date).getYear() }</span>
      <span class="time">ALL DAY</span>
      </time>
      <img alt=${event.name} src="https://farm4.staticflickr.com/3100/2693171833_3545fb852c_q.jpg" />
      <div class="info">
      <h2 class="title">${event.name}</h2>
      <p class="desc">${event.description}</p>
      <ul>
      <li style="width:34%;">moderador <span class="glyphicon glyphicon-user"></span></li>
      <li style="width:33%;">${event.category} <span class="glyphicon glyphicon-tag"></span></li>
      </ul>
      </div>`;

      document.getElementById('eventHolder').appendChild(item)
    })

  })

  </script>
